package main

import (
	"fmt"
	"sync"
	"time"
)

var wg sync.WaitGroup

func main() {

	wg.Add(2)

	go func1()
	go func2()

	wg.Wait()

}

func func1() {
	for i := 0; i < 5; i++ {
		fmt.Println("func1:", i)
		time.Sleep(20)
	}
	wg.Done()
}

func func2() {
	for i := 0; i < 5; i++ {
		fmt.Println("func2:", i)
		time.Sleep(20)
	}
	wg.Done()
}


//Tela
//func2: 0
//func1: 0
//func1: 1
//func2: 1
//func2: 2
//func1: 2
//func2: 3
//func1: 3
//func1: 4
//func2: 4
